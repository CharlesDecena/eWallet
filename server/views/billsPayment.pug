doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title
    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  style
      include index.css

  body
    .header()
      a.logo(href='/') E-Wallet
      .header-right
        a() Welcome User
    main#cardoVue(role="main" class="container")
      h1#pageTitle Bills Payment
      form#transferFundsForm(action="/" method="POST")
        .form-Transfer()
          label Account Number:
          input.form-control#myaccountno(type="text" name="myaccountno" style = "width: 250px;") 
        .form-Transfer()
          label Select Bills to Pay:
        .form-Transfer#custom-select()
          select#paymenttype(name="paymenttype" style ="width: 250px")  
            option(value='') Select Where to Pay
            option(value='Meralco') Meralco
            option(value='Maynilad') Maynilad
            option(value='PLDTHomeDSL') PLDTHomeDSL
            option(value='SKY') SKY 
        .form-Transfer()
          label Amount
          input.form-control#myaccountno(type="text" name="amount" style = "width: 250px;")
        .form-Transfer()
          label PIN Code
          input.form-control#myaccountno(type="password" name="pincode" style = "width: 250px;")
        .form-Transfer()
          a.eventButton(type="button" style="margin-top: 10px; width: 120px;" href="/") Pay
          a.cancel(type="button" style="margin-top: 10px; margin-left: 10px;" href="/") Cancel


