doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title
    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
  
  style
      include index.css
  body
    .header()
      a.logo(href='#default') E-Wallet
      .header-right
        a() Welcome User
    main#cardoVue(role="main" class="container")
    h1#pageTitle Menu
      form#addNoteForm(action="/" method="POST")
        .form-group1()
          a.btn(class="button" href = "/transferfunds") Transfer Funds
          a.btn(class="button" href = "/deposit") Deposit
        .form-group2()
          a.btn(class="button" href = "/withdraw") Withdraw  
          a.btn(class="button" href = "/billsPayment") Pay Bills
        .form-group3()
          a.btn(class="button" href = "/checkBalance") Check Balance
          a.btn(class="button" href = "/transferfunds") Transactions
          